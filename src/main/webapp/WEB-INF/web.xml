<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
      
    <!-- Register Connection --> 
	<servlet>
		<servlet-name>customerRegister</servlet-name>
		<servlet-class>com.servlet.customerRegister</servlet-class>
	</servlet>
    
    <servlet-mapping>
    	<servlet-name>customerRegister</servlet-name>
    	<url-pattern>/register</url-pattern>
    </servlet-mapping>  
    
    <!-- Feedback Connection -->
    <servlet>
    	<servlet-name>customerfeedback</servlet-name>
    	<servlet-class>com.servlet.customerfeedback</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>customerfeedback</servlet-name>
    	<url-pattern>/addfeedback</url-pattern>
    </servlet-mapping> 


	<!-- Login Connection -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.servlet.LoginServlet</servlet-class>
	</servlet>       
	
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
    
    
    <!-- Update Customer -->
    <servlet>
    	<servlet-name>updatecustomer</servlet-name>
    	<servlet-class>com.servlet.UpdateCustomerServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>updatecustomer</servlet-name>
    	<url-pattern>/update</url-pattern>
    </servlet-mapping>
    
    <!-- Delete Customer -->
    <servlet>
    	<servlet-name>deletecustomer</servlet-name>
    	<servlet-class>com.servlet.DeleteCustomerServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>deletecustomer</servlet-name>
    	<url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    <!-- Customer Feedbacks -->
    <servlet>
    	<servlet-name>displayFeedback</servlet-name>
    	<servlet-class>com.servlet.displayFeedback</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>displayFeedback</servlet-name>
    	<url-pattern>/feedback</url-pattern>
    </servlet-mapping>
       
</web-app>
